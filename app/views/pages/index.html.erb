<% if notice %>
	<div class="alert alert-info" role="alert"><%= notice %></div>
	
<% end %>
<div class="row">
	<div class="col-md-4">
		
	</div>
	<div class="col-md-4">
		<h1>Nuevo Usuario</h1>
	</div>
	<div class="col-md-4">
		
	</div>
</div>

<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		
		<form method="POST" action="<%= pages_save_user_path %>">
		  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
		  <div class="form-group">
		    <label for="exampleInputName">Nombre</label>
		    <input type="text" class="form-control" id="exampleInputName" placeholder="Nombre" name="name">
		  </div>
		  <div class="form-group">
		    <label for="exampleInputEmail">Email</label>
		    <input type="email" class="form-control" id="exampleInputEmail" placeholder="Email" name="email">
		  </div>
		  <div class="form-group">
		    <label for="exampleInputAge">Edad</label>
		    <input type="number" class="form-control" id="exampleInputAge" placeholder="Edad" name="age">
		  </div>
		  <button type="submit" class="btn btn-default">Crear Usuario</button>
		</form>
	</div>
	<div class="col-md-4"></div>
</div>